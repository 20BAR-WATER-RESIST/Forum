@page
@model Forum.Pages.Account.RegisterModel
@{
    Layout = "_Layout";
}

<form method="post" class="mx-1 mx-md-4">
    <span id="error" class="text-danger" style="display: none;">Wprowadzone hasła nie są takie same</span>
    <div class="d-flex flex-row align-items-center mb-4">
        <i class="fas fa-user fa-lg me-3 fa-fw"></i>
        <div class="form-outline flex-fill mb-0">
            <span asp-validation-for="RegistrationData.RegisterUsername" class="text-danger"></span>
            <input type="text" id="form3Example1c" class="form-control" asp-for="RegistrationData.RegisterUsername" />
            <label class="form-label" for="form3Example1c">Username</label>
        </div>
    </div>

    <div class="d-flex flex-row align-items-center mb-4">
        <i class="fas fa-envelope fa-lg me-3 fa-fw"></i>
        <div class="form-outline flex-fill mb-0">
            <span asp-validation-for="RegistrationData.RegisterEmail" class="text-danger"></span>
            <input type="email" id="form3Example3c" class="form-control" asp-for="RegistrationData.RegisterEmail" />
            <label class="form-label" for="form3Example3c">Your Email</label>
        </div>
    </div>

    <div class="d-flex flex-row align-items-center mb-4">
        <i class="fas fa-lock fa-lg me-3 fa-fw"></i>
        <div class="form-outline flex-fill mb-0">
            <span asp-validation-for="RegistrationData.RegisterPassword" class="text-danger"></span>
            <input id="password" type="password" id="form3Example4c" class="form-control" asp-for="RegistrationData.RegisterPassword" />
            <label class="form-label" for="form3Example4c">Password</label>
        </div>
    </div>


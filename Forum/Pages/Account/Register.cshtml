    <div class="d-flex justify-content-center mx-4 mb-3 mb-lg-4">
        <input type="submit" class="btn btn-primary btn-lg" value="Register" />
    </div>

</form>

<script>

    document.getElementById("password").addEventListener("keyup", comparison);
    document.getElementById("rpassword").addEventListener("keyup", comparison);

    function comparison(){
        const password = document.getElementById("password").value.trim();
        const rpassword = document.getElementById("rpassword").value.trim();

        if(password != rpassword){
            document.getElementById("error").style.display = "";
        } else { document.getElementById("error").style.display = "none"; }
    }

</script>
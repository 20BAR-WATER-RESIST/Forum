@page
@model IndexModel
@{
    ViewData["Title"] = "Home page";
}

<div class="text-center">
    <h1 class="display-4">Welcome</h1>
    <p>Learn about <a href="https://docs.microsoft.com/aspnet/core">building Web apps with ASP.NET Core</a>.</p>
</div>

<table class="table align-middle mb-0 bg-white">
    <thead class="bg-light">
        <tr>
            <th></th>
            <th>Tablica</th>
            <th>Wątków</th>
            <th>Postów</th>
            <th>Ostatni Temat</th>
        </tr>
    </thead>

@foreach(var topics in Model.indexcategories){
        <tbody>
            <tr>
                <td>
                    <div class="d-flex align-items-center">
                        <img src="https://mdbootstrap.com/img/new/avatars/8.jpg"
                         alt=""
                         style="width: 45px; height: 45px"
                         class="rounded-circle" />
                        <div class="ms-3">
                            <p class="fw-bold mb-1"></p>
                            <p class="text-muted mb-0"></p>
                        </div>
                    </div>
                </td>
                <td>
                    <a class="nav-link text-dark" asp-page="/Board" asp-route-id="" asp-route-title="">@topics.CategoryName</a>
                    <p class="text-muted mb-0">@topics.CategoryDescription</p>
                </td>
                <td>
                    @topics.TotalTopicCount
                </td>
                <td>
                    @topics.TotalCommentCount

                </td>
                <td>

                    <button type="button" class="btn btn-link btn-sm btn-rounded">
                        @topics.TopicName
                    </button>

                    by

                    <button type="button" class="btn btn-link btn-sm btn-rounded">
                        @topics.UserName
                    </button>

                </td>
            </tr>
        </tbody>
}
</table>


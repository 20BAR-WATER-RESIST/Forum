<div class="modal fade static-registration-modal" id="registerModal" data-bs-backdrop="static" data-bs-keyboard="false" tabindex="-1" aria-labelledby="registerModalLabel" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered">
        <div class="modal-content">

            <div class="modal-header">
                <h5 class="modal-title" id="registerModalLabel">Register</h5>
                <a asp-page="/Index"><img src="/img/home-icon.png" width="30" height="30" /></a>
            </div>
            <div id="register-error-alert" class="alert alert-danger d-flex align-items-center m-1 mb-0 gap-2 d-none" role="alert">
                <i class="fa-solid fa-triangle-exclamation"></i>
                <span id="registration-danger-allert-message"></span>
            </div>
            <form method="post" id="register-form" class="needs-validation" novalidate>
                <div class="modal-body text-start">
                    <div class="mb-3">
                        <label for="registerUsername" class="form-label">Username</label>
                        <input type="text" class="form-control" id="registerUsername" name="RegisterUsername" minlength="6" maxlength="12" />
                        <div class="invalid-feedback">
                            Please provide a valid username.
                        </div>
                    </div>
                    <div class="mb-3">
                        <label for="registerEmail" class="form-label">Email address</label>
                        <input type="email" class="form-control" id="registerEmail" name="RegisterEmail" />
                        <div class="invalid-feedback">
                            Please provide a valid email address.
                        </div>
                    </div>
                    <div class="mb-3">
                        <label for="registerPassword" class="form-label" required>Password</label>
                        <input type="password" class="form-control" id="registerPassword" name="RegisterPassword" minlength="8" maxlength="15" />
                        <div class="invalid-feedback">
                            Password must contain between 8 and 15 characters and cannot contain any white spaces.
                        </div>
                    </div>
                    <div class="mb-3">
                        <label for="registerConfirmPassword" class="form-label">Confirm Password</label>
                        <input type="password" class="form-control" id="registerConfirmPassword" minlength="8" maxlength="15" />
                        <div class="invalid-feedback">
                            Passwords do not match.
                        </div>
                    </div>
                </div>
                <div class="modal-footer justify-content-between">
                    <div class="mt-3 d-inline-flex align-self-center gap-1">
                        @if (!User.Identity.IsAuthenticated)
                        {
                            <span>Back to</span> <a class="btn btn-link m-0 p-0" id="openLoginModal">Log in</a>
                        }
                    </div>
                    <button type="submit" class="btn btn-primary">Register</button>
                </div>
            </form>
        </div>
    </div>
</div>
<div class="modal fade static-login-modal" id="loginModal" data-bs-backdrop="static" data-bs-keyboard="false" tabindex="-1" aria-labelledby="loginModalLabel" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="registerModalLabel">Login</h5>
                <a asp-page="/Index"><img src="/img/home-icon.png" width="30" height="30" /></a>
            </div>
            <div id="login-error-alert" class="alert alert-danger d-flex align-items-center m-1 mb-0 gap-2 d-none" role="alert">
                <i class="fa-solid fa-triangle-exclamation"></i>
                <span id="login-danger-allert-message"></span>
            </div>
            <form method="post" id="login-form" class="needs-validation" novalidate>
                <div class="modal-body text-start">
                    <div class="mb-3">
                        <label for="email" class="form-label">Email address</label>
                        <input type="email" class="form-control" id="loginEmail" name="Email" />
                        <div class="invalid-feedback">
                            Please provide a valid email address.
                        </div>
                    </div>
                    <div class="mb-3">
                        <label for="password" class="form-label" required>Password</label>
                        <input type="password" class="form-control" id="loginPassword" minlength="8" maxlength="15" name="Pass" />
                        <div class="invalid-feedback">
                            Password must contain between 8 and 15 characters and cannot contain any white spaces.
                        </div>
                    </div>
                    <div class="form-group form-check text-black">
                        <input type="checkbox" class="form-check-input" id="rememberMe" name="RememberMe" value="true">
                        <label class="form-check-label" for="checkbox">Remember Me</label>
                    </div>
                    <div class="mt-3 d-inline-flex align-self-center gap-1">
                        <span>Not a member yet?</span> <a class="btn btn-link m-0 p-0" id="openRegisterModal">Register</a>
                    </div>
                </div>
                <div class="modal-footer">
                    <input type="submit" class="btn btn-primary" value="Login" />
                </div>
            </form>
        </div>
    </div>
</div>
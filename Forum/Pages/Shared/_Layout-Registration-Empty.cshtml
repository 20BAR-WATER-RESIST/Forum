<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Forum</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link href="https://fonts.googleapis.com/icon?family=Material+Icons" rel="stylesheet">
    <script src="https://kit.fontawesome.com/e5cd9c3cf3.js" crossorigin="anonymous"></script>
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link href="~/css/profile-style.css" rel="stylesheet" />
</head>
<body style="background-color: #061c30;">

    <!--Content-->
    <div class="container-lg">
        <div class="row justify-content-evenly py-4">
            
            @RenderBody()
            @await Html.PartialAsync("./AccountPartials/LoginPartials/_LoginStaticPartial.cshtml")
            @await Html.PartialAsync("./AccountPartials/RegistrationPartials/_RegistrationStaticPartial.cshtml")
            @await Html.PartialAsync("./AccountPartials/ValidationPartials/_LoginToastPartial.cshtml")

        </div>
    </div>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    <script src="~/js/Account/static-registration-popup-handler.js" asp-append-version="true"></script>
    <script src="~/js/Account/login-form-sender.js" asp-append-version="true"></script>
    <script src="~/js/Account/registration-form-sender.js" asp-append-version="true"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.6.0/jquery.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery-validate/1.19.3/jquery.validate.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery-validation-unobtrusive/3.2.12/jquery.validate.unobtrusive.js"></script>

    @await RenderSectionAsync("Scripts", required: false)

</body>
</html>
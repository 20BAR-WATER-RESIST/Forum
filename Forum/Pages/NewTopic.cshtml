@page
@model Forum.Pages.NewTopicModel
@{
    Layout = "_Layout";
}



<form method="post" asp-page-handler="SendTopic">
    <select asp-for="CategoryFormData.CategoryID" class="form-select form-select-sm shadow-none mb-3" aria-label=".form-select-sm example">
            <option value="" selected>Select Category</option>
        @foreach(var category in Model.listOfCategories){
            <option value="@category.CategoryID">@category.CategoryName</option>
        }
    </select>
    <div class="form-outline mb-3">
        <label class="form-label" for="form5Example1">Topic Title:</label>
        <input asp-for="TopicFormData.TopicName" type="text" id="form5Example1" class="form-control shadow-none" />
    </div>
    <div class="form-outline mb-3">
        <label class="form-label" for="form5Example2">Topic Description:</label>
        <textarea asp-for="TopicFormData.TopicDescription" class="form-control shadow-none mb-1" maxlength="2000" rows="3"></textarea>
    </div>
    <input type="submit" class="btn btn-primary btn-block mb-4" value="Start New Topic"></input>
</form>